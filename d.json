      "enum": ["info", "warning", "error"],
      "default": "info"
    },
    "read": { "type": "Boolean", "default": "false" },
    "createdAt": { "type": "Date", "default": "Date.now" }
  },
  "$schema ShippingAddress": {
    "userId": { "type": "ObjectId", "ref": "User", "required": "true" },
    "addressLine1": { "type": "String", "required": "true" },
